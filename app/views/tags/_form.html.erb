<%= form.fields_for(:tags) do |tag_form| %>
  <div class="control-group">
    <%= tag_form.label :name, 'Tag:', class: 'control-label' %>
    <div class="controls">
      <%= tag_form.text_field :name, class: 'input-small' %>
      <% unless tag_form.object.nil? || tag_form.object.new_record? %>
        <%= tag_form.label :_destroy, 'Remove', class: 'checkbox' %>
        <%= tag_form.check_box :_destroy %>
      <% end %>
    </div>
  </div>
<% end %>