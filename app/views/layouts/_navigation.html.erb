<nav class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="navbar-header">
    <%= link_to APP_NAME, root_path, class: 'navbar-brand' %>
  </div>

  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav social">
      <li><%= link_to icon(:twitter), "http://twitter.com/ewok_13" %></li>
      <li><%= link_to icon(:tumblr), "http://ewok13.tumblr.com" %></li>
      
      <% if @tags.try(:any?) %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="tags"><%= icon(:tags) %> <%= icon('chevron-down', class: 'fa-1x') %></a>
          <ul class="dropdown-menu">
            <%= content_tag_for(:li, @tags) do |tag| %>
              <%= link_to tag.name, tag %>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>

    <ul class="nav navbar-nav navbar-right" id="user-login">
      <% if user_logged_in? %>
        <div>
          <span class="navbar-text"><%= icon(:user, "Logged in as #{current_user.name} ") %></span>
          <%= link_to icon('sign-out', 'Logout'), logout_path, class: 'btn btn-sm btn-default navbar-btn' %>
        </div>
      <% else %>
        <%= link_to 'Login', login_path, class: 'btn btn-sm btn-default navbar-btn' %>
      <% end %>
    </ul>

  </div>

</nav>