<h1>Log in</h1>

<%= form_for(@user, url: new_login_path, html: {class: 'form-inline', role: 'form'}) do |f| %>
  <div class="form-group">
    <%= f.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email address' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, type: 'passowrd', class: 'form-control', placeholder: 'Password' %>
  </div>

  <%= f.submit 'Log in', class: 'btn btn-default' %>
<% end %>