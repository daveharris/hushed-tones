<% @post.tags.build %>
<%= form_for(@post, html: {class: 'form-horizontal well span9', multipart: true}) do |post_form| %>
  <% if @post.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <fieldset>
    <div class="control-group">
      <%= post_form.label :title %>
      <div class="controls">
        <%= post_form.text_field :title, class: 'input-xxlarge' %>
      </div>
    </div>

    <div class="control-group">
      <%= post_form.label :body %>
      <div class="controls">
        <%= post_form.text_area :body, class: 'input-xxlarge' %>
      </div>
    </div>

    <div class="control-group">
      <%= post_form.label :picture %>
      <div class="controls">
        <%= post_form.file_field :picture %>
      </div>
    </div>
    
    <h2>Tags</h2>
    <%= render :partial => 'tags/form',
               :locals => {:form => post_form} %>
    <div class="actions">
      <%= post_form.submit %>
    </div>
  </fieldset>
<% end %>