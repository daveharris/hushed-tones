source 'https://rubygems.org'

gem 'rails', '~> 3.2'
gem 'sqlite3'

gem 'jquery-rails'

gem 'letmein'

gem 'RedCloth'
gem 'carrierwave'
gem 'mini_magick'

group :development do
  gem 'thin'
  gem 'quiet_assets'
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :test do
  gem 'rb-fsevent', :require => false if RUBY_PLATFORM =~ /darwin/i  
  gem 'guard-rspec'
  gem 'rspec-rails'
  gem 'timecop'
end

group :assets do
  gem 'bootstrap-sass'
  gem 'bootswatch-rails'
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
  gem 'modernizr-rails'
end
